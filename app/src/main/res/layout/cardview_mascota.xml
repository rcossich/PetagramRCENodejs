<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alto_tarjeta"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgFoto"
            android:layout_height="@dimen/alto_foto"
            android:layout_width="match_parent"
            android:src="@drawable/dog_pet_01"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_botones"
            android:foregroundTint="@color/cardview_dark_background"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btLike"
                android:layout_width="@dimen/boton_size"
                android:layout_height="match_parent"
                android:background="@drawable/ic_action_name"
                />
            <TextView
                android:layout_width="@dimen/ancho_nombre"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/tvNombre"
                android:text="@string/nombre"
                android:textSize="@dimen/letra_nombre"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/tvLikes"
                android:text="@string/nlikes"
                android:textSize="@dimen/letra_nombre"
                android:textAlignment="center"
                />
            <ImageView
                android:id="@+id/ivTlikes"
                android:layout_width="@dimen/boton_size"
                android:layout_height="@dimen/boton_size"
                android:src="@drawable/hueso_amarillo"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>