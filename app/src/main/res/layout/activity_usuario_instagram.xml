<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rcossich.petagramrcenodejs.UsuarioInstagramActivity">

    <include android:id="@+id/miActionBar"
        layout="@layout/actionbar"
        >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/miActionBar"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Petagram"
            android:textSize="36dp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ayuda_nombre_usuario"/>
        <Button
            android:id="@+id/btEnvio2"
            android:layout_marginTop="@dimen/separa_boton"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="guardarcuenta"
            android:layout_below="@id/etUsuario"
            android:text="@string/contenido_boton3"/>
    </LinearLayout>

</RelativeLayout>

